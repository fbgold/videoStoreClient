<h2 class="text-center"> All movies</h2>
<div class="tableBox">
    <table class="table  table-striped">  <!-- table-bordered -->
        <thead>
            <tr class="text-center">
                <td>Film id</td>
                <td>Title</td>
                <td>Description</td>
                <td>Category</td>
                <td>Actors</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            {{#each movieData }}
            <tr>
                {{#with this as |movie|}}
                <td style="width:20px;">{{movie.film_id}}</td>
                <td style="width:200px;">{{movie.title}}</td>
                <td style="width:400px;">{{movie.description}}</td>

                <td class="text-left">
                    {{#each movie.Category as |cat|}}
                    {{cat.name}}
                    {{/each}}

                </td>
                <td class="text-left">
                    <div class="divScroll">
                        <ul>
                            {{#each movie.Actors as |actor|}}
                            <li>
                                {{actor.first_name}} {{actor.last_name}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </td>
                {{/with}}
                <td>
                    <a href=""><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                    <a href="" onclick="return confirm('Are you sure?');">
                        <i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>

    </table>
</div>
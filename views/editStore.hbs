
<div class="container">
    <form action="/video/" method="POST" autocomplete="off">
        {{#with storeData as |store|}}
            <div class="row justify-content-center">
                <div class="col-sm-1">
                    <label>Store Id</label>
                    <input type="text" class="form-control" name="storeId" value="{{store.store_id}}" disabled>
                    <input type="hidden" class="form-control" name="Id" value="{{store.store_id}}" >
                </div>
            </div>
            <br>
            <div class="row justify-content-center">
                {{#with store.Address as |address|}}
                <div class="col-sm-3">
                    <label>Address</label>
                    <input type="text" class="form-control" name="address" value="{{address.address}}">
                </div>
                <div class="col-sm-2">
                    <label>City</label>
                    <select class="form-control" name = "city" id="city">
                        {{#each store.cities as |dCity|}}  
                            {{#if (eq store.Address.City.city_id  dCity.city_id)}}   
                                <option value={{dCity.city_id}} selected>{{dCity.city}}</option>
                            {{else}}
                                <option value={{dCity.city_id}}>{{dCity.city}}</option>
                            {{/if}}
                           
                        {{/each}} 
                    </select>
                </div>
                <div class="col-sm-2">
                    <label>State</label>
                    <select class="form-control" name = "state" id="state">
                        {{#each store.states as |dState|}}  
                            {{#if (eq store.Address.district  dState.district)}}   
                                <option selected>{{dState.district}}</option>
                            {{else}}
                                <option>{{dState.district}}</option>
                            {{/if}}
                           
                        {{/each}} 
                    </select>
                </div>
                <div class="col-sm-1">
                    <label>Zip</label>
                    <input type="text" class="form-control" name="zip" value="{{address.postal_code}}">
                </div>
                <div class="col-sm-2">
                    <label>Country</label>
                    <select class='form-control' name = 'country' id='country'> 
                        {{#each store.countries as |dCountry|}}
                            {{#if (eq store.Address.City.Country.country_id dCountry.country_id)}}
                                    <option value={{dCountry.country_id}} selected>{{dCountry.country}}</option>
                                {{else}}
                                    <option value={{dCountry.country_id}}>{{dCountry.country}}</option>
                            {{/if}}
                        {{/each}}
                    </select>
                </div>
                <div class="col-sm-2">
                    <label>Phone</label>
                    <input type="text" class="form-control" name="phone" value="{{address.phone}}">
                </div>
                {{/with}}
            </div>
        {{/with}}
        <br>
        <div class="container">
            <div class="row">
                <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
            </div>
        </div>
    </form>
</div>